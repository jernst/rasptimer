{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/rasptimer",
            "depends"        : [
                "php",
                "php-apache"
            ],
            "apache2modules" : [
                "php7"
            ],
            "phpmodules" : [
                "calendar"
            ],
            "appconfigitems" : [
                {
                    "type"       : "directorytree",
                    "names"      : [
                        "at-run.php",
                        "cron-run.php",
                        "css",
                        "decode-url.php",
                        "emit-current-time.php",
                        "emit-graphic-logs.php",
                        "emit-logs.php",
                        "footer.php",
                        "functions.php",
                        "graphic-logs.php",
                        "handle-post.php",
                        "head.php",
                        "header.php",
                        "images",
                        "index.php",
                        "logs.php",
                        "show-change-schedule.php",
                        "show-schedule.php",
                        "show-status.php",
                        "template.php",
                    ],
                    "source"     : "web/$2"
                },
                {
                    "type"       : "file",
                    "name"       : "${appconfig.apache2.appconfigfragmentfile}",
                    "template"     : "tmpl/htaccess.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"       : "file",
                    "name"       : "config.php",
                    "template"     : "tmpl/config.php.pl",
                    "templatelang" : "perlscript"
                },
                {
                    "type" : "file",
                    "name" : "/var/log/rasptimer.log",
                    "source" : "/dev/null",
                    "uname" : "${apache2.uname}",
                    "gname" : "${apache2.gname}",
                    "retentionpolicy" : "keep",
                    "retentionbucket" : "log"
                }
            ]
        }
    },
    "customizationpoints" : {
        "title" : {
            "name" : "Web page title",
            "type" : "string",
            "required" : false,
            "default" : {
                "value" : "Rasptimer"
            },
            "index" : 0
        },
        "pin4" : {
            "name" : "Pin 4 name",
            "type" : "string",
            "required" : false,
            "default" : {
                "value" : ""
            },
            "index" : 0
        },
        "pin5" : {
            "name" : "Pin 5 name",
            "type" : "string",
            "required" : false,
            "default" : {
                "value" : ""
            },
            "index" : 0
        },
        "pin6" : {
            "name" : "Pin 6 name",
            "type" : "string",
            "required" : false,
            "default" : {
                "value" : ""
            },
            "index" : 6
        },
        "pin10" : {
            "name" : "Pin 10 name",
            "type" : "string",
            "required" : false,
            "default" : {
                "value" : ""
            },
            "index" : 10
        },
        "pin11" : {
            "name" : "Pin 11 name",
            "type" : "string",
            "required" : false,
            "default" : {
                "value" : ""
            },
            "index" : 11
        }
    }
}

